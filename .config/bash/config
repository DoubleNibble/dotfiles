#!/usr/bin/env bash

# Expose shell scripts as commands
export PATH=$PATH:~/.shell/scripts

# Load configs for the current OS
if [ $(uname) = 'Linux' ]; then
    . ~/.config/bash/config-fedora
elif [ $(uname) = 'Darwin' ]; then
    . ~/.config/bash/config-mac
fi

# Set up aliases
. ~/.config/bash/aliases

# Load shell configs
. ~/.shell/config
