#!/usr/bin/env bash

# Add shell scripts to PATH
export PATH=$PATH:~/.shell/scripts

# Load shell configs
. ~/.shell/config

# Set up common aliases
. ~/.config/bash/aliases

# Load configs for the current OS
if [ $(uname) = 'Linux' ]; then
    . ~/.config/bash/config-fedora
elif [ $(uname) = 'Darwin' ]; then
    . ~/.config/bash/config-mac
fi

