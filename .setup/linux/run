#!/usr/bin/env bash

mt_log "Please select an action:"

mt_log "(1): Setup system"
mt_log "(2): Change shell for current user"

mt_prompt_for_character "" mt_temp

if [ "$mt_temp" == '1' ]; then
    sudo bash ~/.setup/linux/setup-system
elif [ "$mt_temp" == '2' ]; then
    . ~/.setup/linux/change-shell
else
    mt_log "Invalid option selected!"
fi
