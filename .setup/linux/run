#!/usr/bin/env bash

mt_log "Setting up Arch Linux..."

mt_confirm_and_source "Set hostname?" \
                      "$mt_setup_dir/linux/set-hostname" \
                      "Skipped setting of hostname"

mt_confirm_and_source "Create users?" \
                      "$mt_setup_dir/linux/create-users" \
                      "Skipped creation of users"

mt_confirm_and_source "Change shell?" \
                      "$mt_setup_dir/linux/change-shell" \
                      "Skipped changing of shell"

. "$mt_setup_dir/linux/setup-sources"
. "$mt_setup_dir/linux/install-packages"

mt_confirm_and_source "Setup GUI?" \
                      "$mt_setup_dir/linux/setup-gui" \
                      "Skipped setting up of GUI"

mt_confirm_and_source "Setup Nvidia graphics drivers?" \
                      "$mt_setup_dir/linux/setup-nvidia-graphics-driver" \
                      "Skipped setting up of Nvidia graphics driver"

mt_confirm_and_source "Setup Peripherals?" \
                      "$mt_setup_dir/linux/setup-peripherals" \
                      "Skipped setting up of peripherals"
